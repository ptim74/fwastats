@{
    ViewData["Title"] = "Error";
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="panel-title">@ViewData["Title"]</div>
        </div>
        <div class="panel-body">

            <p>
                @ViewData["Message"]
            </p>

            <p>
                To submit your clan weights without limitations you need to login and link your player.
            </p>

            <p>
                <!--More info in <a asp-area="" asp-controller="Home" asp-action="SubmitLimits">here</a>.-->
                Please contact HelpDesk if you have any questions.
            </p>

            @if(ViewData["ClanLink"] != null)
            {
                <p>
                    <a class="btn btn-default" asp-route-id="@ViewData["ClanLink"]" asp-area="" asp-controller="Clans" asp-action="Weight">Back</a>
                </p>
            }

        </div>
    </div>
</div>