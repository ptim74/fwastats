@model FWAStatsWeb.Models.PlayerViewModels.LinkViewModel
@{
    ViewData["Title"] = "Link Player";
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">@ViewData["Title"]</div>
        </div>
        <div class="panel-body">

            <form asp-controller="Players" asp-action="CreateLink" method="post" class="form-horizontal">

                @if (string.IsNullOrEmpty(Model.Tag))
                {
                    <div class="alert alert-warning">
                        <strong>Note!</strong>
                        Player Tag is prefilled if you click the link on upper right corner in player details page.
                    </div>
                }

                <div class="alert alert-warning">
                    <strong>Note!</strong>
                    You can find API Token from More Settings page in CoC app.
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Tag" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Tag" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Tag" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ApiToken" class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="ApiToken" class="form-control" autocomplete="off" />
                        <span asp-validation-for="ApiToken" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-default">Link</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}