@model DeleteAccountViewModel
@{
    ViewData["Title"] = "Delete Account";
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="panel-title">@ViewData["Title"]</div>
        </div>
        <div class="panel-body">

            <form asp-controller="Account" asp-action="Delete" method="post" class="form-horizontal">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <div class="checkbox">
                            <label asp-for="DeleteAccount">
                                <input asp-for="DeleteAccount" />
                                @Html.DisplayNameFor(m => m.DeleteAccount)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <div class="checkbox">
                            <label asp-for="DeleteAccountConfirmation">
                                <input asp-for="DeleteAccountConfirmation" />
                                @Html.DisplayNameFor(m => m.DeleteAccountConfirmation)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
