@model IndexViewModel
@{
    ViewData["Title"] = "Manage my account";
    var submitRestrictionList = Html.GetEnumSelectList(typeof(SubmitRestriction));
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">@ViewData["Title"]</div>
        </div>
        <div class="panel-body">

            <div class="form-group">
                <h5>Players:</h5>
                <ul>
                    <li><a asp-controller="Players" asp-action="My" class="text-info">My players</a></li>
                    <li><a asp-controller="Players" asp-action="NewLink" class="text-info">Link new player</a></li>
                </ul>
            </div>

            <div class="form-group">
                <h5>Clans:</h5>
                <ul>
                    <li><a asp-controller="Clans" asp-action="My" class="text-info">My clans</a></li>
                </ul>
            </div>

            <div class="form-group">
                <h5>Account actions:</h5>
                <ul>
                    @if (Model.HasPassword)
                    {
                        <li><a asp-controller="Manage" asp-action="ChangePassword" class="text-info">Change Password</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Manage" asp-action="SetPassword" class="text-info">Create Password</a></li>
                    }
                    <li><a asp-controller="Account" asp-action="Delete" class="text-danger">Delete Account</a></li>
                </ul>
            </div>

        </div>
        </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}