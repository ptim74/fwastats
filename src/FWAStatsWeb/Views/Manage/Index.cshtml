@model IndexViewModel
@{
    ViewData["Title"] = "Manage my account";
    var submitRestrictionList = Html.GetEnumSelectList(typeof(SubmitRestriction));
}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">@ViewData["Title"]</div>
        </div>
        <div class="panel-body">

            <div class="form-group">

                <h5>Players:</h5>

                <ul>
                    @foreach (var player in Model.Players)
                    {
                        <li><a asp-controller="Players" asp-action="Details" asp-route-id="@player.LinkID">@player.Name</a></li>
                    }
                    <li><a asp-controller="Players" asp-action="NewLink" class="text-info">add player</a></li>
                </ul>

            </div>

            <div class="form-group">

                <h5>Clans:</h5>

                <ul>
                    @for (var index = 0; index < Model.Clans.Count; index++)
                    {
                        <li>
                            <a asp-controller="Clans" asp-action="Details" asp-route-id="@Model.Clans[index].LinkID">@Model.Clans[index].Name</a>
                            <ul>
                                <li>
                                    <form asp-controller="Manage" asp-action="SubmitAccess" method="post" class="form-horizontal">
                                        <div class="col-md-12">
                                            <input asp-for="@Model.Clans[index].Tag" name="ClanTag" type="hidden" />
                                            <input asp-for="@Model.Clans[index].Name" name="ClanName" type="hidden" />
                                            <div class="col-md-3">
                                                <label for="@Model.Clans[index].LinkID">Submit Access: </label>
                                            </div>
                                            <div class="col-md-6">
                                                <select id="@Model.Clans[index].LinkID" asp-for="@Model.Clans[index].SubmitRestriction" asp-items="@Html.GetEnumSelectList(typeof(SubmitRestriction))" name="SubmitRestriction" class="form-control"></select>
                                            </div>
                                            <div class="col-md-3">
                                                <button type="submit" class="btn btn-default">Change</button>
                                            </div>
                                        </div>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>


            <div class="form-group">

                <h5>Account actions:</h5>

                <ul>
                    @if (Model.HasPassword)
                    {
                        <li><a asp-controller="Manage" asp-action="ChangePassword" class="text-info">Change Password</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Manage" asp-action="SetPassword" class="text-info">Create Password</a></li>
                    }
                    <li><a asp-controller="Account" asp-action="Delete" class="text-danger">Delete Account</a></li>
                </ul>

            </div>

        </div>
        </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}